<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textoption1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="30dp"
        android:background="#EC7703"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textoption2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="#EC7703"
        android:clickable="true"
        android:onClick="onClick"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textoption3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="100dp"
        android:background="#EC7703"
        android:clickable="true"
        android:onClick="onClick"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textoption4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:background="#EC7703"
        android:clickable="true"
        android:onClick="onClick"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textoption5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="100dp"
        android:background="#EC7703"
        android:clickable="true"
        android:onClick="onClick"
        android:text=" "
        android:textColor="#000000" />

    <Button
        android:id="@+id/bouton_tester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bouton_annuler"
        android:layout_alignBottom="@+id/bouton_annuler"
        android:layout_toRightOf="@+id/bouton_annuler"
        android:onClick="sendMessage"
        android:text="Tester" />

    <Button
        android:id="@+id/bouton_annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textselect2"
        android:layout_below="@+id/textselect2"
        android:layout_marginTop="44dp"
        android:text="Annuler" />

    <TextView
        android:id="@+id/textselect1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="200dp"
        android:background="#EC7703"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textselect2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:background="#EC7703"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textselect3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="200dp"
        android:background="#EC7703"
        android:text=" "
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textselect4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="200dp"
        android:background="#EC7703"
        android:text=" "
        android:textColor="#000000" />

        <TextView
            android:id="@+id/textselect5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="200dp"
            android:background="#EC7703"
            android:text=" "
            android:textColor="#000000" />

</RelativeLayout>